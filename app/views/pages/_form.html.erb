<style type="text/css" media="screen">
  #editor { 
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
</style>


<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>
      <div style="position:relative; width:100%, height:300px">
        <ul>
          <% @page.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label 'Custom URL' %>
  <%= f.text_field :slug %>


  <div style="position:relative; width:100%; height:300px">
    <%= f.text_area :content, id:"editor_text" %>
    <div id="editor" style="padding-top:15px;"></div>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>