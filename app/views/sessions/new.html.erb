<div id="content">

<%- if flash[:notice] %>
<div style="position:absolute; padding-top:8px; top:0; left:0; width:100%; height:30px; background:#f00; color:#Fff; text-align:center;">
	<%= flash[:notice] %>
</div>
<%- end %>

<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <div class="actions"><%= submit_tag "Log in" %></div>
<% end %>
<%= link_to "Don't have an account yet? Sign up.",  signup_path %>
</div>
