<div id="Editor">
<h1 style="padding-bottom:20px;">Editing upload</h1>
<style type="text/css" media="screen">
  #editor { 
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
</style>


<%= form_for(@upload) do |f| %>



  <div style="position:relative; width:100%; height:300px">
    <%= text_area_tag 'content', @content, id:"editor_text", data: {mode: @mode} %>
    <div id="editor" style="padding-top:15px;"></div>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
<%= link_to 'Show', @upload %> |
<%= link_to 'Back', uploads_path %>
</div>